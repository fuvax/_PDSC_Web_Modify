
@{
	ViewBag.Title = "Information_Picture";
}
@model List<string>

<div class="card-hover-shadow-2x card-border card" style="margin-top:15px;margin-bottom:35px;">
	<div class="card-header">
		<h3 style="color:black;">View Picture</h3>
	</div>
	<div class="card-body">
		<div class="col-md-12">
			<div class="row">
				@for (int i = 0; i < Model.Count(); i++)
				{
					<div class="col-4 border-img">
						<img onclick="onClick(this);" data-toggle="modal" data-target="#myModal" class="img-responsive" src="@Model[i]" style="width:100%" />
					</div>
				}
			</div>
		</div>
	</div>
</div>
<script src="~/Tempage/ArchitectUI-Pro/assets/core/jquery.min.js" type="text/javascript"></script>
<script>

	function onClick(element) {

		document.getElementById("imagepreview").src = element.src;
		document.getElementById("btnDownload").href = element.src;
		document.getElementById("myModal").style.display = "block";
	}
</script>
